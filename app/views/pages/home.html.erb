      <% end %>

      <%= content_tag :li, class: "nav-item portfolio" do %>
        <%= content_tag :i, "", class: "fa-solid fa-briefcase" %>
        <%= content_tag :h4, "PORTFOLIO" %>
        <%= content_tag :p, "MY WORKS" %>
      <% end %>

      <%= content_tag :li, class: "nav-item blog" do %>
        <%= content_tag :i, "", class: "fa-solid fa-briefcase" %>
        <%= content_tag :h4, "BLOG" %>
