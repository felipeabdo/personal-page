    <%= content_tag :ul do %>



      <%= content_tag :li, class:"sn-box" do %>
        <%= link_to 'https://www.facebook.com/felipe.abdo', target: '_blank' do %>
          <%= content_tag :div do %>
            <i class="fa-brands fa-facebook-f fa-sm"></i>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag :li, class:"sn-box" do %>
        <%= link_to 'https://twitter.com/felipeabdo', target: '_blank' do %>
          <%= content_tag :div do %>
            <i class="fa-brands fa-twitter fa-sm"></i>
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag :li, class:"sn-box" do %>
        <%= link_to 'https://www.linkedin.com/in/felipeabdo/', target: '_blank' do %>
          <%= content_tag :div do %>
            <i class="fa-brands fa-linkedin-in fa-sm"></i>
