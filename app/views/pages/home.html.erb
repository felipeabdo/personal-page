      <% end %>

      <%= content_tag :li, class: "nav-item contact" do %>
        <%= content_tag :i, "", class: "fa-solid fa-briefcase" %>
        <%= content_tag :h4, "CONTACT" %>
        <%= content_tag :p, "SAY HELLO" %>
      <% end %>

    <% end %>

  <% end %>

  <%= content_tag :div, id: "content-container" do %>

      <%= content_tag :div, id: "about-page" do %>
        <%= render partial: "about"%>
      <% end %>

      <%= content_tag :div, id: "resume-page" do %>
        <%= render partial: "resume"%>
      <% end %>

      <%= content_tag :div, id: "portfolio-page" do %>
        <%= render partial: "portfolio"%>
      <% end %>

      <%= content_tag :div, id: "blog-page" do %>
        <%= render partial: "blog"%>
      <% end %>

      <%= content_tag :div, id: "contact-page" do %>
        <%= render partial: "contact"%>
      <% end %>

  <% end %>

