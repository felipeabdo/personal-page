<%= content_tag :div, class: "content" do %>

  <%= content_tag :aside, id: "left" do %>

    <%= content_tag :ul do %>

      <%= content_tag :li, class: "nav-item no-click no-triangle", id:"profile-pic" do %>
        <%= image_tag "profile.jpg", alt: "Profile Picture", width: 155 %>
        <%= content_tag :div, "Felipe Barroso Abdo", class: "name-profile uppercase" %>
      <% end %>

      <%= content_tag :li, class: "nav-item about" do %>
        <%= content_tag :i, "", class: "fa-solid fa-briefcase" %>
        <%= content_tag :h4, "ABOUT ME" %>
        <%= content_tag :p, "WHO I AM" %>
      <% end %>

      <%= content_tag :li, class: "nav-item resume" do %>
        <%= content_tag :i, "", class: "fa-solid fa-briefcase" %>
        <%= content_tag :h4, "RESUME" %>
